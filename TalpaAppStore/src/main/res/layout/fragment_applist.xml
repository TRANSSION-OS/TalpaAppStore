<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" /> -->

    <include layout="@layout/view_page_loading" />

    <FrameLayout
        android:id="@+id/special_list"
        android:layout_width="match_parent"
        android:layout_height="214dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/special_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/default_icon"
            android:scaleType="fitXY"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_marginTop="140dp"
            android:orientation="vertical"
            android:background="@drawable/special_page_black"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >
            <TextView
                android:id="@+id/special_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asdsadsadasdasdsad"
                android:textSize="18sp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/special_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="4444444ddddddddddddddddddddsdsadsdddddddddddddddddddddddddddddddddddddddddddddddd4444445323423432"
                android:textColor="#CACACA"
                android:maxLines="2"
                android:textSize="14sp"/>
        </LinearLayout>

    </FrameLayout>
        
    <tran.com.android.gc.lib.widget.AuroraListView
        android:id="@+id/lv_app"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>