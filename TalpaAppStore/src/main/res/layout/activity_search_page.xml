	               android:layout_height="wrap_content"
	               android:background="@drawable/search_design_award_app"
	               />
	           
	           <TextView 
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:layout_marginLeft="@dimen/search_page_margin_5"
